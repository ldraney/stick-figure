{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Pose",
  "description": "A snapshot of bone transforms for a stick figure pose",
  "type": "object",
  "required": ["name", "boneTransforms"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Unique identifier for this pose"
    },
    "boneTransforms": {
      "type": "object",
      "description": "Map of bone names to transform data",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "rotation": {
            "type": "number",
            "description": "Rotation in degrees relative to bind pose"
          },
          "x": {
            "type": "number",
            "description": "X translation relative to bind pose"
          },
          "y": {
            "type": "number",
            "description": "Y translation relative to bind pose"
          },
          "scaleX": {
            "type": "number",
            "description": "X scale factor"
          },
          "scaleY": {
            "type": "number",
            "description": "Y scale factor"
          }
        }
      }
    }
  },
  "examples": [
    {
      "name": "guard",
      "boneTransforms": {
        "upperArm-left": { "rotation": -60 },
        "forearm-left": { "rotation": -90 },
        "upperArm-right": { "rotation": -60 },
        "forearm-right": { "rotation": -90 }
      }
    }
  ]
}
