{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Action",
  "description": "A named animation action that transitions through poses",
  "type": "object",
  "required": ["name", "duration", "keyframes"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Unique identifier for this action"
    },
    "duration": {
      "type": "number",
      "description": "Total duration in seconds",
      "minimum": 0.01
    },
    "category": {
      "type": "string",
      "description": "Action category (attack, defense, reaction, transition)",
      "enum": ["attack", "defense", "reaction", "transition", "misc"]
    },
    "keyframes": {
      "type": "array",
      "description": "Keyframe sequence for this action",
      "minItems": 2,
      "items": {
        "type": "object",
        "required": ["time", "pose"],
        "properties": {
          "time": {
            "type": "number",
            "description": "Normalized time (0-1) within the action",
            "minimum": 0,
            "maximum": 1
          },
          "pose": {
            "type": "string",
            "description": "Reference to a pose name"
          },
          "easing": {
            "type": "string",
            "description": "GSAP easing function name",
            "default": "power2.inOut"
          }
        }
      }
    }
  },
  "examples": [
    {
      "name": "jab",
      "duration": 0.3,
      "category": "attack",
      "keyframes": [
        { "time": 0, "pose": "guard", "easing": "power2.in" },
        { "time": 0.4, "pose": "punch_extend_left", "easing": "power2.out" },
        { "time": 1, "pose": "guard", "easing": "power2.inOut" }
      ]
    }
  ]
}
